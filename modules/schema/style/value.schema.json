{
  "$id": "https://xviz.org/schema/style/value.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "XVIZ Style Value",
  "type": "object",
  "properties": {
    "fillColor": {
      "$ref": "https://xviz.org/schema/style/_color.schema.json"
    },
    "strokeColor": {
      "$ref": "https://xviz.org/schema/style/_color.schema.json"
    },
    "strokeWidth": {
      "type": "number"
    },
    "radius": {
      "type": "number"
    },
    "size": {
      "type": "number"
    },
    "angle": {
      "type": "number"
    },
    "textAnchor": {
      "enum": ["start", "middle", "end"]
    },
    "alignmentBaseline": {
      "enum": ["top", "center", "bottom"]
    },
    "height": {
      "type": "number"
    }
  },
  "anyOf": [
    {"required": ["fillColor"]},
    {"required": ["strokeColor"]},
    {"required": ["strokeWidth"]},
    {"required": ["radius"]},
    {"required": ["size"]},
    {"required": ["angle"]},
    {"required": ["textAnchor"]},
    {"required": ["alignmentBaseline"]}
  ],
  "additionalProperties": false
}
