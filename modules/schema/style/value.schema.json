{
  "$id": "https://xviz.org/schema/style/value.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "XVIZ Style Value",
  "type": "object",
  "properties": {
    "color": {
      "$ref": "https://xviz.org/schema/style/_color.schema.json"
    },
    "thickness_m": {
      "type": "number"
    },
    "font_scale": {
      "type": "number"
    }
  },
  "anyOf": [
    {"required": ["color"]},
    {"required": ["thickness_m"]},
    {"required": ["font_scale"]}
  ],
  "additionalProperties": false
}
