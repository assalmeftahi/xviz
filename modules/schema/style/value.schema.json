{
  "$id": "https://xviz.org/schema/style/value.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "XVIZ Style Value",
  "type": "object",
  "properties": {
    "color": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "minimum": 0,
      "maximum": 255,
      "minItems": 4,
      "maxItems": 4
    },
    "thickness_m": {
      "type": "number"
    },
    "font_scale": {
      "type": "number"
    }
  },
  "anyOf": [
    {"required": ["color"]},
    {"required": ["thickness_m"]},
    {"required": ["font_scale"]}
  ],
  "additionalProperties": false
}
