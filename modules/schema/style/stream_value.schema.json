{
  "id": "https://xviz.org/schema/style/stream_value.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "XVIZ Stream Style Value",
  "type": "object",
  "properties": {
      "fill_color": {
        "$ref": "https://xviz.org/schema/style/_color.json"
      },
      "stroke_color": {
        "$ref": "https://xviz.org/schema/style/_color.json"
      },
      "stroke_width": {
        "type": "number"
      },
      "radius": {
        "type": "number"
      },
      "size": {
        "type": "number"
      },
      "angle": {
        "type": "number"
      },
      "text_anchor": {
        "enum": ["start", "middle", "end"]
      },
      "alignment_baseline": {
        "enum": ["top", "center", "bottom"]
      },
      "height": {
        "type": "number"
      },
      "radius_min_pixels": {
        "type": "number",
        "minimum": 0
      },
      "radius_max_pixels": {
        "type": "number",
        "minimum": 0
      },
      "stroke_width_min_pixels": {
        "type": "number",
        "minimum": 0
      },
      "stroke_width_max_pixels": {
        "type": "number",
        "minimum": 0
      },
      "opacity": {
        "type": "number",
        "minimum": 0,
        "maximum": 1
      },
      "stroked": {
        "type": "boolean"
      },
      "filled": {
        "type": "boolean"
      },
      "extruded": {
        "type": "boolean"
      },
      "wireframe": {
        "type": "boolean"
      }
  },
  "anyOf": [
      {"required": ["fill_color"]},
      {"required": ["stroke_color"]},
      {"required": ["stroke_width"]},
      {"required": ["radius"]},
      {"required": ["size"]},
      {"required": ["angle"]},
      {"required": ["text_anchor"]},
      {"required": ["alignment_baseline"]},
      {"required": ["radius_min_pixels"]},
      {"required": ["radius_max_pixels"]},
      {"required": ["stroke_width_min_pixels"]},
      {"required": ["stroke_width_max_pixels"]},
      {"required": ["opacity"]},
      {"required": ["stroked"]},
      {"required": ["filled"]},
      {"required": ["extruded"]},
      {"required": ["wireframe"]}
  ],
  "additionalProperties": false
}
