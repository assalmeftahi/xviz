{
  "$id": "https://xviz.org/schema/core/primitive_state.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "XVIZ Primitive State",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "primitives": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "oneOf": [
          {"$ref": "https://xviz.org/schema/primitives/point.json"},
          {"$ref": "https://xviz.org/schema/primitives/circle.json"}
        ]
      }
    }
  },
  "required": [ "name", "primitives" ],
  "additionalProperties": false
}
