{
  "$id": "https://xviz.org/schema/primitive_state.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "XVIZ Primitive State",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "primitives": {
      "type": "array",
      "items": {
        "$ref": "primitives/point.schema.json"
      }
    }
  },
  "required": [ "name", "primitives" ]
}
