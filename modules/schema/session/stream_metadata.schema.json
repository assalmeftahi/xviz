{
  "id": "https://xviz.org/schema/session/stream_metadata.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "XVIZ Stream Metadata",
  "type": "object",
  "properties": {
    "source": {
      "type": "string"
    },
    "units": {
      "type": "string"
    },
    "coordinate": {},
    "transform": {
      "$ref": "https://xviz.org/schema/math/matrix4x4.json"
    },
    "transform_callback": {
      "type": "string"
    },
    "category": {
      "enum": [
        "annotation",
        "future_instance",
        "pose",
        "primitive",
        "time_series",
        "variable"
      ]
    },
    "type": {
      "enum": [
        "circle",
        "image",
        "point",
        "polygon",
        "polyline",
        "stadium",
        "text"
      ]
    },
    "stream_style": {
        "$ref": "https://xviz.org/schema/style/stream_value.json"
    },
    "style_classes": {
      "type": "array",
      "items": {
        "$ref": "https://xviz.org/schema/style/class.json"
      },
      "additionalItems": false
    }
  },
  "allOf": [
    {
      "anyOf": [
        {
          "properties": {
            "coordinate": {
              "enum": [
                "GEOGRAPHIC",
                "IDENTITY"
              ]
            }
          }
        },
        {
          "properties": {
            "coordinate": { "enum": ["VEHICLE_RELATIVE"] }
          }
        },
        {
          "properties": {
            "coordinate": { "enum": ["DYNAMIC"] }
          },
          "required": ["transform_callback"]
        }
      ]
    },
    {
      "anyOf": [
        {
          "properties": {
            "category": {
              "enum": [
                "future_instance",
                "primitive"
              ]
            }
          },
          "required": ["type"]
        },
        {
          "properties": {
            "category": {
              "enum": [
                "annotation",
                "pose",
                "time_series",
                "variable"
              ]
            }
          }
        }
      ]
    }
  ],
  "additionalProperties": false
}
