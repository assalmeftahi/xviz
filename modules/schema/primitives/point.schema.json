{
  "id": "https://xviz.org/schema/primitives/point.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "XVIZ Point primitive",
  "allOf": [{ "$ref": "https://xviz.org/schema/core/primitive_base.json" }],
  "properties": {
    "object_id": {},
    "style": {},
    "classes": {},
    "type": {
      "enum": ["point"]
    },
    "points": {
      "$ref": "https://xviz.org/schema/math/point3d_list.schema.json"
    },
    "colors": {
      "type": "array",
      "oneOf": [
        {
          "items": {
            "$ref": "https://xviz.org/schema/style/_color.schema.json"
          }
        },
        {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minimum": 0,
          "maximum": 255,
          "minItems": 4
        }
      ],
      "additionalItems": false
    }
  },
  "required": [ "points" ],
  "additionalProperties": false
}
