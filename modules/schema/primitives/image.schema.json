{
  "$id": "https://xviz.org/schema/primitives/image.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "XVIZ Image primitive",
  "allOf": [{ "$ref": "https://xviz.org/schema/core/primitive_base.json" }],
  "properties": {
    "object_id": {},
    "style": {},
    "classes": {},
    "type": {
      "enum": ["image"]
    },
    "position": {
      "$ref": "https://xviz.org/schema/math/vector3x1.json"
    },
    "data": {
      "type": "string",
      "contentEncoding": "base64",
      "pattern": "^(?:[A-Za-z0-9+/]{4})*(?:[A-Za-z0-9+/]{2}==|[A-Za-z0-9+/]{3}=)?$"
    },
    "width_px": {
      "type": "integer",
      "minValue": 0
    },
    "height_px": {
      "type": "integer",
      "minValue": 0
    }
  },
  "required": [ "position", "data", "width_px", "height_px" ],
  "additionalProperties": false
}
